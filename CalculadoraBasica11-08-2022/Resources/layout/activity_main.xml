<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/calculator_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:textSize="50sp"
            android:text="@string/cien" />
    </HorizontalScrollView>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        app:orientation="horizontal"
        app:rowCount="5"
        app:columnCount="4">
        <Button
            style="@style/button_calculator"
            app:layout_columnSpan="4"
            android:text="@string/DEL" />
        <Button
            style="@style/button_calculator"
            android:text="@string/siete" />
        <Button
            style="@style/button_calculator"
            android:text="@string/ocho" />
        <Button
            style="@style/button_calculator"
            android:text="@string/nueve" />
        <Button
            style="@style/button_calculator"
            android:text="@string/dividir" />
        <Button
            style="@style/button_calculator"
            android:text="@string/cuatro" />
        <Button
            style="@style/button_calculator"
            android:text="@string/cinco" />
        <Button
            style="@style/button_calculator"
            android:text="@string/seis" />
        <Button
            style="@style/button_calculator"
            android:text="@string/multi" />
        <Button
            style="@style/button_calculator"
            android:text="@string/uno" />
        <Button
            style="@style/button_calculator"
            android:text="@string/dos" />
        <Button
            style="@style/button_calculator"
            android:text="@string/tres" />
        <Button
            style="@style/button_calculator"
            android:text="@string/menos" />
        <Button
            style="@style/button_calculator"
            android:text="@string/punto" />
        <Button
            style="@style/button_calculator"
            android:text="@string/cero" />
        <Button
            style="@style/button_calculator"
            android:text="@string/igual" />
        <Button
            style="@style/button_calculator"
            android:text="@string/mas" />
    </android.support.v7.widget.GridLayout>
</LinearLayout>